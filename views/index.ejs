<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bolo app</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h3>See all the chats here!</h3>
    <form action="/chats/new" method="get">
        <button class="btn">New msg</button><br>
    </form>

    <% for(let chat of chats){%>
        <div class="chat">
            <p>From: <i><%= chat.from %></i></p>

            <div class="msg">
               <P>Message: <%= chat.msg %> </p>
                <form action="/chats/<%= chat._id %>/edit" method="GET">
                    <button>Edit</button>
                </form>
            </div>

            <p>Received by: <i><%= chat.to %></i></p>
            <hr>
            <p> <%= chat.created_at.toString().split(" ")[4] %></p>
            <p> <%= chat.created_at.toString().split(" ").slice(0,4).join("-")%></p>
        </div>
        <br><br>
    <% } %>

</body>
</html>
